{
    "compilerOptions": {
        "target": "esnext",
        "baseUrl": ".",
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "downlevelIteration": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "module": "es2022",
        "paths": {
            "@modules/*": ["src/renderer/modules/*"],
            "@modules": ["src/renderer/modules/index"],
        }
    }
}